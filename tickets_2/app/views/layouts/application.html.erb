<!DOCTYPE html>
<html>
  <head>
    <title>Tickets2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <div id="log_in_out"></div>
    <div id="content"></div>
    <%= yield %>
  </div>
  <script type="text/javascript">
    var initCurrentUser = function() {
      <% if !current_user.blank? %>
        Tickets2.setCurrentUser(<%= current_user.id %>, '<%= current_user.role %>')
      <% else %>
        Tickets2.setCurrentUser(null, null)
      <% end %>
    };
  </script>
  </body>
</html>
